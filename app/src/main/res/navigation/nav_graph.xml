<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.onur.lorempicsum.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_list1Fragment"
            app:destination="@id/list1Fragment" />
        <action
            android:id="@+id/action_homeFragment_to_list2Fragment"
            app:destination="@id/list2Fragment" />
    </fragment>
    <fragment
        android:id="@+id/list1Fragment"
        android:name="com.onur.lorempicsum.List1Fragment"
        android:label="fragment_list1"
        tools:layout="@layout/fragment_list1" />
    <fragment
        android:id="@+id/list2Fragment"
        android:name="com.onur.lorempicsum.List2Fragment"
        android:label="fragment_list2"
        tools:layout="@layout/fragment_list2" />
</navigation>